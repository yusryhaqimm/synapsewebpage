    body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1a1a1a;
            color: #ccc;
        }

        header {
            background: linear-gradient(90deg, #333, #555);
            color: #fff;
            padding: 1em 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        header img {
            height: 80px;
            width: 130px;
            margin-right: 20px;
        }

        .hero {
            background: url('sylab.jpg') no-repeat center center/cover;
            height: 250px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            text-align: center;
            box-shadow: inset 0 0 100px rgba(0, 0, 0, 0.7);
        }

        .hero h2 {
            margin: 0;
            font-size: 2.5em;
            text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        section {
            margin: 20px 0;
            padding: 20px;
            background: #2b2b2b;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }

        h1, h2, h3 {
            color: #00c3ff;
        }

        .products-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        #search-bar {
            width: 30%;
            padding: 10px 15px;
            font-size: 1em;
            border: 1px solid #444;
            border-radius: 25px;
            background-color: #2b2b2b;
            color: #ccc;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        #search-bar::placeholder {
            color: #888;
        }

        #search-bar:focus {
            outline: none;
            background-color: #333;
            border-color: #00c3ff;
            box-shadow: 0 0 10px rgba(0, 195, 255, 0.5);
        }

        .products {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .product {
            background: #333;
            border: 1px solid #444;
            border-radius: 10px;
            padding: 20px;
            flex-basis: calc(25% - 20px);
            box-sizing: border-box;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            overflow: hidden;
        }

        .product:hover {
            transform: translateY(-10px);
            box-shadow: 0 0 30px rgba(0, 195, 255, 0.7);
        }

        .product img {
            max-width: 100%;
            height: auto;
            border-bottom: 1px solid #444;
            margin-bottom: 15px;
            transition: transform 0.3s;
        }

        .product:hover img {
            transform: scale(1.05);
        }

        .product a {
            color: #00c3ff;
            text-decoration: none;
        }

        footer {
            background: linear-gradient(90deg, #333, #555);
            color: #fff;
            text-align: center;
            padding: 1em 0;
            margin-top: 20px;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.3);
        }

        .quick-links, .services, .vision, .contact {
            width: 30%;
            display: inline-block;
            vertical-align: top;
            text-align: left;
        }

        .quick-links ul, .services ul {
            list-style: none;
            padding: 0;
        }

        .quick-links a, .services a {
            color: #00c3ff;
            text-decoration: none;
        }

        .quick-links a:hover, .services a:hover {
            text-decoration: underline;
        }